# InfluxDB Configuration
INFLUXDB_URL=https://eu-central-1-1.aws.cloud2.influxdata.com/
INFLUXDB_TOKEN=
INFLUXDB_ORG=
INFLUXDB_BUCKET=
INFLUXDB_MEASUREMENT=
INFLUXDB_SQL_ENABLED=

APP_TIMEZONE=Asia/Phnom_Penh

TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# MQTT (Mosquitto) broker settings
# For local Mosquitto: host=localhost, port=1883
MQTT_HOST=localhost
MQTT_PORT=1883
# Optional auth
# MQTT_USERNAME=
# MQTT_PASSWORD=
# Set to true if using TLS and mqtts
MQTT_TLS=false

# Topics and payloads for pump control
MQTT_PUMP_TOPIC=farm/pump/control
PUMP_ON_PAYLOAD=ON
PUMP_OFF_PAYLOAD=OFF

# Server Configuration
# For production:
#   NODE_ENV=production
#   HOST=127.0.0.1
PORT=3000
NODE_ENV=production
HOST=127.0.0.1
FRONTEND_URL=https://your-domain.example

# Optional: seed initial admin accounts on startup
# SECURITY WARNING: Only enable when intentionally seeding.
SEED_ADMINS_ON_STARTUP=false
# JSON array of admin objects: [{"email":"admin@example.com","password":"change-me","role":"admin"}]
SEED_ADMINS_JSON=

# JWT Authentication
JWT_SECRET=
JWT_EXPIRES_IN=24h

# MySQL Database
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=
MYSQL_DATABASE=

# Cloudinary (optional for uploads)
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# Telegram options
ENABLE_TELEGRAM_BOT=true
TELEGRAM_MOCK=false
TELEGRAM_USE_POLLING=true

# Mode toggles
ENV_MODE=PROD
DISABLE_MQTT=false
DISABLE_INFLUX=false

# Scheduler (optional)
ENABLE_SCHEDULER_IN_API=false

# Alternative broker URL (takes precedence if set)
MQTT_BROKER_URL=

# Pump control topics and mode
MQTT_PUMP_TOPIC=farm/pump/control
FERT_PUMP_TOPIC=farm/fert/control
BOT_PUMP_CONTROL_MODE=MQTT

# InfluxDB allowed fields (optional)
INFLUXDB_ALLOWED_FIELDS=ph,moisture,soil_temp,air_humidity,air_temp,nitrogen,phosphorus,potassium,salinity,ec

# Bot backend base URL (used by telegram bot)
BACKEND_BASE_URL=http://127.0.0.1:3000