# Server
NODE_ENV=production
PORT=3000
HOST=0.0.0.0
FRONTEND_URL=http://localhost:5173

# MySQL (local)
MYSQL_HOST=
MYSQL_PORT=3306
MYSQL_USER=devuser
MYSQL_PASSWORD=changeme
MYSQL_DATABASE=snam_baitong_dev

# JWT
JWT_SECRET=dev-only-secret-change-me
JWT_EXPIRES_IN=24h

# InfluxDB (optional for local read-only)
